{% extends '@MjmlMailThemes/modern_mjml/components/layout.mjml.twig' %}

{% block title %}{{ 'Back Office Order'|trans({}, 'Emails.Body', locale) }}{% endblock %}

{% block content %}
<mj-section padding="0 25px">
    <mj-column padding="0">

        <mj-raw>
            <!-- TITLE BEGINING -->
        </mj-raw>
        <mj-text padding-top="0" padding-bottom="20px" font-weight="600" font-size="20px">
            {{ 'Hi {firstname} {lastname},'|trans({}, 'Emails.Body', locale) }}
        </mj-text>
        <mj-raw>
            <!-- TITLE ENDING -->
        </mj-raw>

    </mj-column>
</mj-section>

<mj-raw>
    <!-- BORDER BEGINING -->
</mj-raw>
<mj-section text-align="left" padding="0 25px 20px">
    <mj-column width="25px">
        <mj-text padding-top="0px">
            <p style="border-bottom:3px solid #505050;width:25px;border-radius:6px; margin: 0"></p>
        </mj-text>
    </mj-column>
</mj-section>
<mj-raw>
    <!-- BORDER ENDING -->
</mj-raw>

<mj-raw>
    <!-- ORDER BEGINING -->
</mj-raw>
<mj-section padding="0 25px 0">
    <mj-column padding="0">
        <mj-text padding-bottom="0px" padding-top="0px" font-size="16px" font-weight="600">
            {{ 'A new order has been generated on your behalf.'|trans({}, 'Emails.Body', locale)|raw }}
        </mj-text>
    </mj-column>
</mj-section>
<mj-raw>
    <!-- ORDER ENDING -->
</mj-raw>

<mj-raw>
    <!-- BOX BEGINING -->
</mj-raw>
<mj-section padding="15px 50px 40px">
    <mj-column background-color="#fefefe" border="1px solid #DFDFDF" padding="20px 0">
        <mj-text>
            {{ 'Please go on <a href="{order_link}">{order_link}</a> to complete the payment.'|trans({}, 'Emails.Body', locale)|raw }}
        </mj-text>
    </mj-column>
</mj-section>
<mj-raw>
    <!-- BOX ENDING -->
</mj-raw>
{% endblock %}
